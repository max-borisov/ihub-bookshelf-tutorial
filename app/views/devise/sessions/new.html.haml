%h1.text-center Sign in
%hr/
.row
  .col-md-6.col-md-offset-3
    - if alert
      = render 'shared/flash_alert'
    = form_for(resource, url: new_user_session_path(resource)) do |f|
      .form-group
        = f.label :email
        = f.text_field :email, class: 'form-control'
      .form-group
        = f.label :password
        = f.password_field :password, class: 'form-control'      
      .checkbox
        = f.label :remember_me do
          = f.check_box :remember_me
          Remember me on this computer
      %div
        = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
    .form-suggestion-footer.text-center
      = link_to('Sign up', new_user_registration_path) + ', if you do not have account yet.'
